# ── E2E Automation Framework — Environment Variables ─────────────────
# Copy to .env and customize. All vars prefixed with AUTO_ to avoid collision.

# Target site
AUTO_BASE_URL=https://www.nykaa.com
AUTO_API_BASE_URL=https://www.nykaa.com

# Browser
AUTO_BROWSER=chrome
AUTO_HEADLESS=true
AUTO_WINDOW_WIDTH=1920
AUTO_WINDOW_HEIGHT=1080
AUTO_IMPLICIT_WAIT=10
AUTO_EXPLICIT_WAIT=15
AUTO_PAGE_LOAD_TIMEOUT=30

# Selenium Grid (empty = local driver)
AUTO_SELENIUM_REMOTE_URL=

# API validation
AUTO_API_TIMEOUT=15
AUTO_API_MAX_RETRIES=2
AUTO_API_RETRY_BACKOFF=1.0

# Test execution
AUTO_RERUNS=2
AUTO_RERUNS_DELAY=3
AUTO_PARALLEL_WORKERS=2

# Reporting
AUTO_REPORT_DIR=reports
AUTO_SCREENSHOT_ON_FAILURE=true

# Logging
AUTO_LOG_LEVEL=INFO
AUTO_LOG_FORMAT=json

# Environment tag
AUTO_ENVIRONMENT=local
