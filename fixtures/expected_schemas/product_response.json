{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nykaa Product Response",
  "description": "Expected schema for Nykaa product detail API response",
  "type": "object",
  "required": ["response"],
  "properties": {
    "response": {
      "type": "object",
      "properties": {
        "id": {
          "type": ["string", "number"]
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "price": {
          "type": ["number", "string"]
        },
        "mrp": {
          "type": ["number", "string"]
        },
        "brand_name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "image_url": {
          "type": "string"
        },
        "in_stock": {
          "type": "boolean"
        }
      }
    }
  }
}
